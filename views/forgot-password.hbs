        <!-- Login Start -->
        <div class="login">
            <div class="container">
                <div class="section-header">
                    <h3>Forgot PassWord</h3>
                    {{#if done}}
                    <p class="alert alert-success py-3">
                        A email has been sent to your email. Please follow the instruction in that email to reset your password.
                    </p>                        
                    {{else}}
                    <p>
                        Enter your email and we'll send you the instructions.
                    </p>                        
                    {{/if}}
                </div>
                {{#unless done}}
                <div class="row">
                    
                    <div class="col-md-6 mx-auto">
                        <form action="/users/forgot-password" method="post" id="formForgot">    
                            <div class="register-form">
                                <div class="row">
                                    <div class="col-md-12">
                                        <label>E-mail</label>
                                        <input class="form-control" type="email" placeholder="E-mail" name="email" required pattern="[a-z0-9._%+\-]+@[a-z0-9.\-]+\.[a-z]{2,}$">
                                    </div>
                                   
                                    <div class="col-md-12">
                                        <button class="btn">Submit</button>
                                    </div>
                                    {{#if message}}
                                        <div class="p-3 mt-3 alert alert-warning"> {{{message}}} </div>
                                    {{/if}}
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                {{/unless}}
            </div>
        </div>
